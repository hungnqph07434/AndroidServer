          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Forum</title>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">
        <i class="zmdi zmdi-font"></i>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link" href="/forumProducts">Sản phẩm </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/productManager">Quản lý sản phẩm</a>
            </li>
            <li class="nav-item ">
                <a class="nav-link" href="/uploadProduct">Cập nhập sản phẩm</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/forumUser">Danh sách người dùng</a>
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0" action="searchNamePro" method="post">
            <input class="form-control mr-sm-2" type="search" name="searchs" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>


<div class="container m-t-20">
    <form action="/updateUser" method="post">
        <div class="form-group">
            <label>ID</label>
            <input readonly class="form-control" name="idd"  value="{{user._id}}">
        </div>
        <div class="form-group">
            <label>Username</label>
            <input class="form-control" name="nameuser" placeholder="Nhập username" value="{{user.username}}">
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="form-control" name="passw" placeholder="Nhập mật khẩu mới" value="{{user.password}}">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>




{{#if isShow}}
    <script>
        alert("{{alertMessage}}")
    </script>
{{/if}}


